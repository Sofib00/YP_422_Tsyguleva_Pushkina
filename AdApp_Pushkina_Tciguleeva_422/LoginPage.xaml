<Page x:Class="AdApp_Pushkina_Tciguleeva_422.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdApp_Pushkina_Tciguleeva_422"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Логин" FontWeight="Bold"/>
            <TextBox x:Name="LoginTextBox" Margin="0,5,0,10"/>
            <TextBlock Text="Пароль" FontWeight="Bold"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5,0,20"/>
            <Button Content="Войти" Click="LoginButton_Click" Margin="0,0,0,10"/>
            <TextBlock x:Name="ErrorText" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
