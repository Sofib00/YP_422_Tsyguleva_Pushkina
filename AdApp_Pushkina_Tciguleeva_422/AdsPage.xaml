<Page x:Class="AdApp_Pushkina_Tciguleeva_422.AdsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdApp_Pushkina_Tciguleeva_422"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Объявления">

    <Page.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:OwnAdVisibilityConverter x:Key="OwnAdVisibilityConverter"/>
        <local:OtherAdVisibilityConverter x:Key="OtherAdVisibilityConverter"/>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">

            <TextBox x:Name="SearchBox" Width="200" Margin="5"
                     Text="Поиск..." Foreground="Gray"
                     GotFocus="SearchBox_GotFocus"
                     LostFocus="SearchBox_LostFocus"
                     TextChanged="SearchBox_TextChanged"/>

            <ComboBox x:Name="CityFilter" Width="140" Margin="5" SelectionChanged="FiltersChanged"/>
            <ComboBox x:Name="CategoryFilter" Width="140" Margin="5" SelectionChanged="FiltersChanged"/>
            <ComboBox x:Name="TypeFilter" Width="140" Margin="5" SelectionChanged="FiltersChanged"/>
            <ComboBox x:Name="StatusFilter" Width="140" Margin="5" SelectionChanged="FiltersChanged"/>

            <ComboBox x:Name="OwnerFilter" Width="140" Margin="5" SelectionChanged="FiltersChanged">
                <ComboBoxItem Content="Все" IsSelected="True"/>
                <ComboBoxItem Content="Мои"/>
                <ComboBoxItem Content="Другие"/>
            </ComboBox>

            <Button x:Name="AddButton"
                    Content="Добавить"
                    Width="120" Height="30"
                    Margin="10,5,0,5"
                    Visibility="Collapsed"
                    Click="AddButton_Click"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <ItemsControl x:Name="AdsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" Padding="10" BorderBrush="Gray" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Image Source="{Binding PhotoResolved}" Width="140" Height="140" Stretch="UniformToFill"/>

                                <StackPanel Grid.Column="1" Margin="10 0 0 0">
                                    <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,2,0,2"/>
                                    <TextBlock Text="{Binding City}" Margin="0,2,0,2"/>

                                    <TextBlock Text="{Binding StatusName}" 
                                                       FontWeight="Bold" 
                                                       Foreground="White" 
                                                       Background="Gray"  
                                                       Padding="2"
                                                       Margin="0,2,0,2"
                                                       HorizontalAlignment="Left"/> 

                                    <TextBlock Text="Цена:" FontWeight="Bold" Margin="0,2,0,0"/>
                                    <TextBlock Text="{Binding Price}" Margin="0,0,0,2"/>
                                    <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                                        <Button Content="Редактировать"
                                                        Margin="0,0,10,0"
                                                        Tag="{Binding ID}"
                                                        Click="EditButton_Click"
                                                        Visibility="{Binding UserId, Converter={StaticResource OwnAdVisibilityConverter}}"/>

                                        <Button Content="Удалить"
                                                        Tag="{Binding ID}"
                                                        Click="DeleteButton_Click"
                                                        Visibility="{Binding UserId, Converter={StaticResource OwnAdVisibilityConverter}}"/>
                                        <Button Content="Купить" 
                                                        Tag="{Binding ID}" 
                                                        Click="BuyButton_Click"
                                                        Visibility="{Binding UserId, Converter={StaticResource OtherAdVisibilityConverter}}"/>  
                                    </StackPanel>   
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
